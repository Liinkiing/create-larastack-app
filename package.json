{
  "name": "create-larastack-app",
  "version": "0.1.0",
  "description": "Scaffold a Larastack-based monorepo with selectable frontend, backend, and mobile apps.",
  "keywords": [
    "cli",
    "create",
    "larastack",
    "scaffold",
    "starter"
  ],
  "homepage": "https://github.com/Liinkiing/create-larastack-app#readme",
  "bugs": {
    "url": "https://github.com/Liinkiing/create-larastack-app/issues"
  },
  "license": "MIT",
  "author": "Liinkiing",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Liinkiing/create-larastack-app.git"
  },
  "bin": {
    "create-larastack-app": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "oxlint --report-unused-disable-directives-severity error",
    "lint:fix": "oxlint --fix --report-unused-disable-directives-severity error",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "prepack": "pnpm run clean && pnpm run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.1",
    "giget": "^2.0.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^22.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "oxlint --fix --report-unused-disable-directives-severity error",
      "oxfmt"
    ],
    "*.{json,md}": [
      "oxfmt"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.8.0"
}
